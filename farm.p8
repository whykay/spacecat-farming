--	end
	
	for s in all(seeds) do
		s.tig += 1
		if s.tig > 300 then
			mset(s.sx, s.sy, 4) --grow carrot
		end
	end
	
end

function dcrops()
	print(croptimer)
end

function growcrops()
	--loop through all tiles on map
	--change tiles 3 -> 4 
	for x=0,15 do
		for y =0, 15 do
			if mget(x, y) == 3 then
				mset(x, y, 4) --grow carrot
			end
		end
	end
end
